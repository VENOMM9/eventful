<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tickets</title>
    <link rel="stylesheet" href="/tickets.css"> <!-- Link to your CSS file -->
</head>
<body>
    <nav class="navbar">
        <ul class="nav-list">
            <li class="nav-item"><a href="/events" class="nav-link">Events</a></li>
            <li class="nav-item"><a href="/tickets" class="nav-link">Tickets</a></li>

            <li class="nav-item"><a href="/create-event" class="nav-link">Create Events</a></li>

            <li class="nav-item"><a href="/create-ticket" class="nav-link">Create Tickets</a></li>
            <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
        </ul>
    </nav>  
    <h1>&nbsp;&nbsp; All Tickets</h1>
    <div class="tickets-container">
        <% if (tickets.length > 0) { %>
            <% tickets.forEach(ticket => { %>
                <div class="ticket">
                    <p><strong>Ticket ID:</strong> <%= ticket._id %></p>
                    <p><strong>Event ID:</strong> <%= ticket.eventId %></p>
                    <p><strong>User ID:</strong> <%= ticket.userId %></p>
                    <p><strong>Ticket Type:</strong> <%= ticket.ticketType %></p>
                    <% if (ticket.price !== undefined) { %>
                        <p><strong>Price:</strong> $<%= ticket.price.toFixed(2) %></p>
                    <% } else { %>
                        <p><strong>Price:</strong> Price Not Available</p>
                    <% } %>
                    <p><strong>Quantity:</strong> <%= ticket.quantity %></p>


                </div>
            <% }); %>
        <% } else { %>
            <p>No tickets available.</p>
        <% } %>
    </div>
</body>
</html>

