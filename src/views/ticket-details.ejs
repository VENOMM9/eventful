<!-- create-ticket.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Ticket</title>
    <link rel="stylesheet" href="/dashboard.css">

    <style>
        /* Your CSS styles */
    </style>
</head>
<body>
    <!-- Your navigation bar -->
    <nav class="navbar">
        <ul class="nav-list">
            <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
            <li class="nav-item"><a href="/dashboard" class="nav-link">Dashboard</a></li>
            <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
        </ul>
    </nav>

    <!-- Display the ticket information -->
    <h2>Created Ticket Details:</h2>
    <p>Event ID: <%= ticket.eventId %></p>
    <p>Ticket Type: <%= ticket.ticketType %></p>
    <p>Price: <%= ticket.price %></p>
    <p>Quantity: <%= ticket.quantity %></p>

    <!-- Add update and delete functionality -->
    <div>
        <!-- Link to the update ticket page -->
        <a href="/ticket/<%= ticket._id %>">Update Ticket</a>

        <!-- Link to the delete ticket page -->
        <a href="/ticket/<%= ticket._id %>">Delete Ticket</a>
    </div>
  
    <% if (qrCodeURL) { %>
        <h2>Generated QR Code</h2>
        <img src="<%= qrCodeURL %>" alt="QR Code">
    <% } else { %>
        <p>No QR Code available</p>
    <% } %>

    <!-- More HTML content if needed -->
</body>
</html>
