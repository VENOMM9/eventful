<!-- create-ticket.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Ticket</title>
    <style>
        .navbar {
            background-color: #333; /* Set navbar background color */
            padding: 10px; /* Add padding to navbar */
        }
    
        .nav-list {
            list-style-type: none; /* Remove default list styles */
            margin: 0;
            padding: 0;
            display: flex; /* Make the list items display horizontally */
        }
    
        .nav-item {
            margin-right: 20px; /* Add spacing between nav items */
        }
    
        .nav-link {
            text-decoration: none; /* Remove default underline from links */
            color: #fff; /* Set link color */
            font-weight: bold; /* Make link text bold */
        }
    
        .nav-link:hover {
            color: #ffcc00; /* Change link color on hover */
        }
    </style>
</head>
<body>
    
    
    <nav class="navbar">
        <ul class="nav-list">
            <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
            <li class="nav-item"><a href="/create-event" class="nav-link">Create event</a></li>

            <li class="nav-item"><a href="/allevents" class="nav-link">All Events</a></li>
            <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
        </ul>
    </nav>
    <!-- <header><%- include('partials/header') %></header> -->

    <h1>Create Ticket</h1>
    <form action="/ticket/create-ticket" method="POST">
        <label for="eventId">Event ID:</label>
        <input type="text" id="eventId" name="eventId" required>
        
        <label for="userId">User ID:</label>
        <input type="text" id="userId" name="userId" required>
    
        <label for="ticketType">Ticket Type:</label>
        <input type="text" id="ticketType" name="ticketType" required>
    
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required>
    
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" required>

        <!-- Add more input fields for other ticket details such as date, time, location, etc. -->

        <input type="submit" value="Create Ticket">
    </form>

    <% if (events) { %>
        <ul>
            <% for (let i = 0; i < events.length; i++) { %>
                <li><%= events[i].name %></li>
            <% } %>
        </ul> 
    <% } %>

    <!-- Section to display QR code -->
    <div id="qrCodeContainer">
        <% if (ticket && ticket.qrCodeUrl) { %>
            <h2>Generated QR Code</h2>
            <img src="<%= ticket.qrCodeUrl %>" alt="QR Code">
        <% } else { %>
            <p>No QR Code available</p>
        <% } %>
    </div>
</body>
</html>

